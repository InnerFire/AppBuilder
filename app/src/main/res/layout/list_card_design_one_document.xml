<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edt_title_colorful_cards"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:hint="@string/card_main_title"
                    android:inputType="textCapWords"
                    android:lines="1"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edt_subtitle_colorful_cards"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:hint="@string/card_main_subtitle"
                    android:inputType="text"
                    android:lines="2"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_save_colorfulcards"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:background="@color/firstColor"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="@string/card_save"
                    android:textColor="#fff"
                    android:textStyle="bold" />

            </LinearLayout>

            <ImageView
                android:id="@+id/img_add_design"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="top|end"
                android:layout_margin="2dp"
                android:src="@drawable/plus_black" />

            <ImageView
                android:id="@+id/img_delete_design"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="2dp"
                android:src="@drawable/delete_black" />


        </FrameLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>